<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:src="@drawable/ic_more_vert_black_18dp" />

    <CheckBox
        android:id="@+id/checkbox_draggable_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/list_person_name_color"
        android:textSize="20sp"
        android:background="@null"/>

    <TextView
        android:id="@+id/days_item_draglist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textColor="@color/drag_list_view_choosen_dates"
        android:background="@null"/>
    <TextView
        android:id="@+id/month_item_draglist"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/drag_list_view_choosen_dates"
        android:background="@null"/>

    <!-- empty view to fill space from text to the end (delete button)-->
    <View
        android:id="@+id/view_dummy_draggable_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/delete_draggable_item"
        android:src="@drawable/ic_cancel_black_18dp"
        android:visibility="invisible"
        android:background="@color/colorTransparent"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
