<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <CheckBox
        android:id="@+id/checkbox_draggable_list_item_AD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/text_AD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/list_person_name_color"
        android:textSize="20sp"
        android:background="@null"/>


    <!-- empty view to fill space from text to the end (delete button)-->
    <View
        android:id="@+id/view_dummy_aditional_duty_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>




</LinearLayout>
